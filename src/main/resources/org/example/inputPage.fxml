<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.geometry.Insets?>


<?import javafx.scene.layout.GridPane?>
<GridPane alignment="TOP_CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.InputController">
   <children>
      <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Name: " />
      <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="nameTextField"/>

      <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Datum: " />
      <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="birthdayDatePicker"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
